<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.85"
            android:background="@drawable/login_bg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/banner_login" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-20dp"
            android:layout_weight="1"
            android:background="@drawable/et_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/calibri_regular"
                        android:includeFontPadding="false"
                        android:textAlignment="center"
                        android:text="@string/m_pin_login"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Btn_background"
                        android:textSize="26sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/mpin_lyt"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:includeFontPadding="false"
                                android:id="@+id/et_1"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textSize="24sp"
                                android:textAlignment="center" />

                            <EditText
                                android:id="@+id/et_2"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:fontFamily="@font/calibri_regular"
                                android:includeFontPadding="false"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textSize="24sp"
                                android:textAlignment="center"
                                android:textColor="@color/black" />

                            <EditText
                                android:inputType="numberPassword"
                                android:fontFamily="@font/calibri_regular"
                                android:includeFontPadding="false"
                                android:id="@+id/et_3"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:background="@drawable/otp_bg"
                                android:textSize="24sp"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:includeFontPadding="false"
                                android:id="@+id/et_4"
                                android:layout_width="0dp"
                                android:layout_height="100dp"
                                android:layout_margin="20dp"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textSize="24sp"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <Button
                            android:fontFamily="@font/calibri_regular"
                            android:includeFontPadding="false"
                            android:id="@+id/tv_forgot_mpin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:padding="20dp"
                            android:text="@string/forgot_your_pin"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_bckgnd"
                            android:textSize="26sp" />


                        <Button
                            android:fontFamily="@font/calibri_regular"
                            android:includeFontPadding="false"
                            android:id="@+id/btn_biometric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:padding="20dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="80dp"
                            android:text="Use FingerPrint"
                            android:textAlignment="center"
                            android:textSize="26dp"
                            android:background="@drawable/btn_email_bg"
                            android:textColor="@color/white"/>

                    </LinearLayout>


                </LinearLayout>



            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone" />



</RelativeLayout>
