<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/lyt_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="@drawable/login_bg">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
             android:alpha="09"
                android:src="@drawable/banner_login"/>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="-20dp"
            android:layout_weight="1"
            android:background="@drawable/et_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/lyt_set_pin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20sp"
                            android:layout_marginBottom="20sp"
                            android:text="@string/set_your_mpin"
                            android:textAlignment="center"
                            android:textColor="#3a3a3c"
                            android:fontFamily="@font/calibri_regular"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="#707073"
                            android:text="@string/please_set_your_4_digit_mpin"
                            android:fontFamily="@font/calibri_regular"
                            android:textAlignment="center"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Create MPIN"
                            android:textAlignment="center"
                            android:textColor="#3a3a3c"
                            android:fontFamily="@font/calibri_regular"
                            android:textSize="20sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et1_one"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et1_two"
                                android:layout_width="0dp"
                                 android:layout_height="50dp"
                                 android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et1_three"
                                android:layout_width="0dp"
                                 android:layout_height="50dp"
                                 android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et1_four"
                                android:layout_width="0dp"
                                 android:layout_height="50dp"
                                 android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Confirm MPIN"
                            android:textAlignment="center"
                            android:textColor="#3a3a3c"
                            android:fontFamily="@font/calibri_regular"
                            android:textSize="20sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et2_one"
                                android:layout_width="0dp"
                                 android:layout_height="50dp"
                                 android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et2_two"
                                android:layout_width="0dp"
                                 android:layout_height="50dp"
                                 android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et2_three"
                                android:layout_width="0dp"
                                 android:layout_height="50dp"
                                android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />

                            <EditText
                                android:fontFamily="@font/calibri_regular"
                                android:id="@+id/et2_four"
                                android:layout_width="0dp"
                                 android:layout_height="50dp"
                                 android:layout_margin="15dp"
                                android:layout_weight="1"
                                android:imeOptions="actionDone"
                                android:background="@drawable/otp_bg"
                                android:inputType="numberPassword"
                                android:maxLength="1"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <Button
                            android:fontFamily="@font/calibri_regular"
                            android:id="@+id/btn_mpin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                          android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:textColor="@color/white"
                            android:background="@drawable/btn_bckgnd"
                            android:padding="10dp"
                            android:textSize="16sp"
                            android:text="Confirm" />
                    </LinearLayout>

                </LinearLayout>



            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>





