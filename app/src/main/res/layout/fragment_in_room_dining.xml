<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
<RelativeLayout
    android:layout_above="@+id/bottom_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:fontFamily="sans-serif-medium"
            android:textStyle="italic"
            android:id="@+id/tv_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/in_room_dinning"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/dining_header_desc"
            android:layout_below="@+id/tv_header_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/dining_header_desc"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/dining_desc"
            android:layout_below="@+id/dining_header_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="@string/dinning_desc"
            android:textSize="14sp"/>
        <GridView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/dining_desc"
            android:id="@+id/dinning_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="100dp"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:numColumns="3"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="8dp"/>
    <ProgressBar
        android:visibility="gone"
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>
</RelativeLayout>
    <LinearLayout
        android:id="@+id/bottom_view"
        android:background="@color/dark_gray"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="sans-serif"
                    android:id="@+id/item_count"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="sans-serif"
                    android:id="@+id/tv_symbol"
                    android:text=" | "
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:fontFamily="sans-serif"
                    android:id="@+id/tv_item_price"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




            <TextView

                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Including all taxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/tv_view_order"
            android:background="@color/light_gray"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/view_order"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>