<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/travel_bg">

    <LinearLayout
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/lyt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:fontFamily="sans-serif"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:id="@+id/tv_car_model"/>

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_below="@id/lyt_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:id="@id/lyt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/radio_group_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--<RadioGroup
            android:id="@+id/travel_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
    </LinearLayout>

<LinearLayout
  android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    android:layout_marginStart="10dp"
    android:id="@+id/lyt_3"
    android:orientation="vertical"
    android:layout_below="@id/lyt_2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:fontFamily="sans-serif"
        android:text="@string/no_of_cab"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/number_stepper"
        layout="@layout/number_stepper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp" />
</LinearLayout>





































</RelativeLayout>