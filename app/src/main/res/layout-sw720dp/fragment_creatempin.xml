<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/lyt_set_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/set_your_mpin"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:text="@string/please_set_your_4_digit_mpin"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="Create Mpin"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <EditText
                    android:fontFamily="sans-serif"
                    android:id="@+id/et1_one"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_gray"
                    android:inputType="number"
                    android:textSize="20sp"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:fontFamily="sans-serif"
                    android:id="@+id/et1_two"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_gray"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/et1_three"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_gray"
                    android:fontFamily="sans-serif"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />

                <EditText
                    android:fontFamily="sans-serif"
                    android:id="@+id/et1_four"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/et_border_gray"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textSize="20sp"
                    android:textAlignment="center" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="Retype Mpin"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="15dp"
                android:orientation="horizontal">

                <EditText
                    android:fontFamily="sans-serif"
                    android:id="@+id/et2_one"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:background="@drawable/et_border_gray"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:fontFamily="sans-serif"
                    android:id="@+id/et2_two"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:background="@drawable/et_border_gray"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:fontFamily="sans-serif"
                    android:id="@+id/et2_three"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:background="@drawable/et_border_gray"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />

                <EditText
                    android:fontFamily="sans-serif"
                    android:id="@+id/et2_four"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:imeOptions="actionDone"
                    android:background="@drawable/et_border_gray"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <Button
                android:fontFamily="sans-serif"
                android:id="@+id/btn_mpin"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:padding="20dp"
                android:text="Confirm"
                android:textSize="24sp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>

    <!-- <RelativeLayout
         android:id="@+id/dialoug"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_gravity="center_vertical"
         android:gravity="center">
         <include
             layout="@layout/welcome"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center" />
     </RelativeLayout>-->
</RelativeLayout>