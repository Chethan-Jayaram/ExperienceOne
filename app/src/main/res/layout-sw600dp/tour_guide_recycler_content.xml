<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/tour_pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

        <me.relex.circleindicator.CircleIndicator3
            android:id="@+id/tour_indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="bottom"
            android:padding="10dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/tour_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/tour_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
       android:layout_margin="2dp"

            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp"/>

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/tour_timings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_time"
            android:drawablePadding="5dp"
            android:padding="2dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/tour_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="14sp" />

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/tour_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_distance"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/tour_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_border_black"
            android:gravity="bottom"
            android:padding="5dp"
            android:text="@string/request_a_cab"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>